{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@mbs/components":["components"],
      "@mbs/contexts":["contexts"],
      "@mbs/hooks*":["hooks/*"],
      "@mbs/pages":["pages"],
      "@mbs/interfaces":["interfaces"],
      "@mbs/routes":["routes"],
      "@mbs/services*":["services/*"],
      "@mbs/utils":["utils"],
    }
  },
  "include": [
    "src/**/*",
    "test/*"
  ]
}